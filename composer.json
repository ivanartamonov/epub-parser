{
    "name": "aradon/epub-parser",
    "autoload": {
        "psr-4": {
            "Aradon\\EpubParser\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Ivan Artamonov"
        }
    ],
    "scripts": {
        "test": "phpunit",
        "cs": "phpcs",
        "lint": "phpstan analyse src tests --level=6",
        "all": "composer test & composer cs & composer lint"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "3.*",
        "phpstan/phpstan": "^1.8"
    },
    "require": {
        "ext-zip": "*",
        "ext-dom": "*"
    }
}
